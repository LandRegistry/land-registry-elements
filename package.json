{
  "name": "land-registry-elements",
  "version": "0.0.1",
  "description": "Land registry frontend pattern library - building on top of http://govuk-elements.herokuapp.com",
  "scripts": {
    "check-node-version": "check-node-version --node $npm_package_engines_node --npm $npm_package_engines_npm",
    "test": "gulp test && ./run_tests.sh",
    "build": "gulp clean && gulp copy && gulp build",
    "dev": "npm run build && gulp watch",
    "pretest": "npm run check-node-version --silent",
    "prebuild": "npm run check-node-version --silent",
    "postinstall": "npm install govuk-elements-sass govuk_frontend_toolkit govuk_template_jinja --no-save"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LandRegistry/land-registry-elements.git"
  },
  "author": {
    "name": "Andy Mantell",
    "email": "andy.mantell@digital.landregistry.gov.uk"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LandRegistry/land-registry-elements/issues"
  },
  "homepage": "https://github.com/LandRegistry/land-registry-elements#readme",
  "engines": {
    "npm": "5.x",
    "node": "8.x"
  },
  "devDependencies": {
    "gulp": "^3.9.1",
    "land-registry-gulp-tasks": "git+https://github.com/LandRegistry/land-registry-gulp-tasks.git",
    "check-node-version": "^2.1.0"
  },
  "dependencies": {
    "browsernizr": "^2.1.0",
    "es6-promise": "^4.1.0",
    "govuk-elements-sass": "^3.0.3",
    "govuk_frontend_toolkit": "^6.0.3",
    "govuk_template_jinja": "^0.22.1",
    "jquery": "1.x",
    "pubsub-js": "1.5.3",
    "validate.js": "0.10.0"
  },
  "peerDependencies": {
    "govuk-elements-sass": "x",
    "govuk_frontend_toolkit": "x",
    "govuk_template_jinja": "x"
  }
}
