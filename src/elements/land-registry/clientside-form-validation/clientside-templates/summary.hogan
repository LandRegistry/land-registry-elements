<div class="error-summary" role="group" aria-labelledby="error-summary-heading" tabindex="-1">
  {{#headingMessage}}
    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">{{headingMessage}}</h2>
  {{/headingMessage}}

  {{#description}}
    <p>{{description}}</p>
  {{/description}}

  <ul class="error-summary-list">
    {{#errors}}
      <li><a href="#" data-target="{{name}}">{{{message}}}</a></li>
    {{/errors}}

    {{#serversideErrors}}
      <li>{{{.}}}</li>
    {{/serversideErrors}}
  </ul>
</div>
