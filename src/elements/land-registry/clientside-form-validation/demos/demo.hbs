<h1 class="heading-xlarge">
  <span class="heading-secondary">{{component.categories.primary}} / {{component.categories.secondary}}</span>
  {{component.name}}
</h1>

{{#capture 'form'}}
  <form method="GET" id="example_form" data-clientside-validation="example_form_validation">

    <div class="error-summary" role="group" aria-labelledby="error-summary-heading" tabindex="-1">
      <h2 class="heading-medium error-summary-heading" id="error-summary-heading">The following errors were found:</h2>

      <ul class="error-summary-list">
        <li>Example of a server side error message present in the page on load. It <a href="http://google.co.uk">contains a link</a> to something.</li>
      </ul>
    </div>

    <div class="form-group">
      <label class="form-label" for="full-name">Full name</label>
      <span class="form-hint">Some description about the field written here</span>
      <input class="form-control" type="text" id="full-name" name="full-name">
    </div>

    <div class="form-group">
      <label class="form-label" for="another-field">Another field</label>
      <span class="form-hint">(optional)</span>
      <input class="form-control" type="text" id="another-field" name="another-field">
    </div>

    <div class="form-group">
      <label class="form-label" for="another-required-field">Another required field</label>
      <input class="form-control" type="text" id="another-required-field" name="another-required-field">
    </div>

    <fieldset class="inline">

      <legend class="visuallyhidden">Insert question here?</legend>

      <div class="form-group">

        <div class="multiple-choice">
          <input id="radio-inline-1" type="radio" name="radio-inline-group" value="Yes">
          <label for="radio-inline-1">Yes</label>
        </div>
        <div class="multiple-choice">
          <input id="radio-inline-2" type="radio" name="radio-inline-group" value="No">
          <label for="radio-inline-2">No</label>
        </div>

      </div>

    </fieldset>

    <div class="form-group">
      <div class="multiple-choice">
        <input id="terms" name="terms" type="checkbox" value="agree">
        <label for="terms">
          I agree that you will provide the summary as soon as I've paid.<br>
          I accept that I will lose my right to cancel the contract as soon as the summary is displayed.
        </label>
      </div>
    </div>

    <input type="submit" class="button" value="Submit">
  </form>

  <script type="application/json" id="example_form_validation">
    {
      "full-name": {
        "presence": {
          "message": "Please supply your full name"
        },
        "length": {
          "minimum": 3,
          "maximum": 70,
          "message": "This field should be between 3 and 70 characters"
        }
      },
      "another-required-field": {
        "presence": {
          "message": "Another required field must be filled in"
        }
      },
      "radio-group": {
        "presence": {
          "message": "Please choose an option"
        }
      },
      "terms": {
        "presence": {
          "message": "You need to agree to receive the summary right away and that youâ€™ll lose your right to cancel"
        }
      }
    }
  </script>
{{/capture}}

{{{form}}}

